<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Gradient background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#FFB74D"
                android:endColor="#FF8A65"
                android:angle="45"/>
        </shape>
    </item>

    <!-- Optional overlay for subtle effect -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#80FFFFFF" /> <!-- 50% white overlay -->
        </shape>
    </item>

</layer-list>
