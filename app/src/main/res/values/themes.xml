<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (Light) -->
    <style name="Theme.SmartExpenseTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary colors -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryContainer">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary colors -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryContainer">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Error / Status colors -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Toolbar -->
        <item name="topAppBarStyle">@style/Widget.SmartExpenseTracker.TopAppBar</item>
    </style>

    <!-- Dark theme (optional) -->
    <style name="Theme.SmartExpenseTracker.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorPrimaryContainer">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryContainer">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/dark_gray</item>
        <item name="colorSurface">@color/dark_gray</item>
        <item name="colorOnSurface">@color/white</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>
    </style>

    <!-- TopAppBar style -->
    <style name="Widget.SmartExpenseTracker.TopAppBar" parent="Widget.Material3.TopAppBar">
        <item name="titleTextColor">@color/white</item>
        <item name="backgroundColor">@color/purple_500</item>
    </style>

</resources>
